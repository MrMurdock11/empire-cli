{
	"compilerOptions": {
		"target": "ES5",
		"module": "CommonJS",
		"declaration": true,
		"declarationMap": true,
		// "emitDeclarationOnly": true,
		"outDir": "./dist",
		"rootDir": "./src",
		"moduleResolution": "node",
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"esModuleInterop": true,
		"types": [
			"reflect-metadata",
			"node"
		]
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"node_modules"
	]
}